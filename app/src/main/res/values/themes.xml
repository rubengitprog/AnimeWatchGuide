<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <!-- Tema base -->
    <style name="Base.Theme.WatchGuide" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores Material 3 por defecto -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorTextBlackAndWhite">@color/black</item>
        <!-- Valores por defecto para tus atributos personalizados -->
        <item name="colorBackground">@android:color/white</item>
        <item name="colorCard">@android:color/darker_gray</item>
        <item name="colorTextPrimary">@android:color/black</item>
        <item name="colorTextSecondary">@android:color/darker_gray</item>
        <item name="imagenMain">@drawable/ic_launcher_foreground</item>
        <item name="secondaryImage">@drawable/ic_launcher_background</item>
    </style>

    <!-- Tema principal -->
    <style name="Theme.WatchGuide" parent="Base.Theme.WatchGuide" />

    <!-- Naruto -->
    <style name="TemaNaruto" parent="Base.Theme.WatchGuide">
        <item name="colorPrimary">#FF9800</item> <!-- naranja traje -->

        <item name="colorSecondary">#1976D2</item> <!-- azul protector -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorTextBlackAndWhite">@color/black</item>
        <item name="colorBackground">#FFF3E0</item> <!-- beige cálido -->
        <item name="colorCard">#FFE0B2</item>
        <item name="colorTextPrimary">#212121</item>
        <item name="colorTextSecondary">#424242</item>
        <item name="imagenMain">@drawable/naruto_main</item>
        <item name="secondaryImage">@drawable/naruto_secondary</item>
    </style>

    <!-- One Piece -->
    <style name="TemaOnePiece" parent="Base.Theme.WatchGuide">
        <item name="colorPrimary">#2196F3</item> <!-- azul mar -->

        <item name="colorSecondary">#FFD600</item> <!-- amarillo del sombrero -->
