<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="?attr/colorBackgroundBlackAndWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header mejorado sin gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <!-- Icono circular -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_search"
                    android:tint="#FFFFFF" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Títulos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialogTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Friends"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorTextBlackAndWhite" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect with anime fans"
                    android:textSize="14sp"
                    android:textColor="?attr/colorTextBlackAndWhite"
                    android:alpha="0.7"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contenedor principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Caja de búsqueda mejorada -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search by username..."
                app:boxBackgroundColor="@android:color/transparent"
                app:boxStrokeColor="?attr/colorPrimary"
                app:boxStrokeWidth="2dp"
                app:boxCornerRadiusTopStart="14dp"
                app:boxCornerRadiusTopEnd="14dp"
                app:boxCornerRadiusBottomStart="14dp"
                app:boxCornerRadiusBottomEnd="14dp"
                app:startIconDrawable="@android:drawable/ic_menu_search"
                app:startIconTint="?attr/colorPrimary"
                app:endIconMode="clear_text"
                app:endIconTint="?attr/colorPrimary"
                app:hintTextColor="?attr/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editSearchUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="?attr/colorTextBlackAndWhite"
                    android:textSize="16sp"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Separador sutil -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/colorTextBlackAndWhite"
                android:alpha="0.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp" />

            <!-- Lista de usuarios -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewUsers"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:clipToPadding="false"
                android:scrollbars="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <!-- Botón de cerrar mejorado -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClose"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
