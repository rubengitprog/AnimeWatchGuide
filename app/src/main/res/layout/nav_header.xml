<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <!-- Fondo con gradiente -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/nav_header_gradient"
        android:scaleType="centerCrop" />

    <!-- Imagen de fondo del tema -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="?attr/secondaryImage"
        android:alpha="0.3"
        android:scaleType="centerCrop" />

    <!-- Contenido -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:elevation="4dp">

            <!-- Imagen de perfil con borde -->
            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:src="@drawable/onepiece_main" />

            <!-- Imagen del adorno (gorro, etc.) -->
            <ImageView
                android:id="@+id/headerOverlay"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="?attr/hatImage"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="-5dp"
                android:adjustViewBounds="true" />
        </FrameLayout>

        <!-- Nombre de usuario con fondo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorCard">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="?attr/colorCard">

                <TextView
                    android:id="@+id/headerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="?attr/colorTextBlackAndWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/iconLapiz"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lapiz"
                    android:contentDescription="Edit"
                    android:background="@android:color/transparent"
                    android:padding="2dp"
                    android:layout_marginStart="6dp"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</FrameLayout>
