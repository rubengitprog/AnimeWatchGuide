<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackgroundBlackAndWhite">

    <!-- Toolbar/Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="?attr/colorPrimary"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Top Animes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp" />

    </LinearLayout>

    <!-- BotÃ³n para ir al Top 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoToTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ† Go to Top #1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:icon="@android:drawable/ic_menu_revert"
        style="@style/Widget.Material3.Button.TonalButton" />

    <!-- TabLayout para MAL vs Local -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:tabTextColor="@android:color/white"
        app:tabSelectedTextColor="@android:color/white"
        app:tabIndicatorColor="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill" />

    <!-- Filtro de mÃ­nimo de valoraciones (solo visible en tab WatchGuide) -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?attr/colorBackground"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum ratings filter:"
            android:textSize="14sp"
            android:textColor="?attr/colorTextBlackAndWhite"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All (1+)"
                android:checked="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3+ ratings" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5+ ratings" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10+ ratings" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <!-- FrameLayout para RecyclerView y FAB -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- RecyclerView for MAL top anime -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewTopAnime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="visible" />

        <!-- RecyclerView for local ranking -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewLocalRanking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:visibility="gone" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBarLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:visibility="gone" />

        <!-- Empty state para ranking local -->
        <TextView
            android:id="@+id/textEmptyLocalRanking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No ratings yet.\nBe the first to rate an anime!"
            android:textSize="16sp"
            android:textColor="?attr/colorTextBlackAndWhite"
            android:textAlignment="center"
            android:alpha="0.7"
            android:visibility="gone" />

        <!-- FloatingActionButton para scroll to top -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabScrollToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_menu_upload"
            android:contentDescription="Scroll to top"
            android:visibility="gone"
            app:tint="@android:color/white" />

    </FrameLayout>

</LinearLayout>
